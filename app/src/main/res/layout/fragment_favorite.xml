<!-- fragment_favorite.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề Fragment Favorite -->
    <TextView
        android:id="@+id/tvFavoriteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Danh sách sản phẩm yêu thích"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- RecyclerView để hiển thị danh sách sản phẩm yêu thích -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvFavoriteTitle"
        android:padding="16dp" />

</RelativeLayout>
