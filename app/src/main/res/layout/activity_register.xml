<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bgregister"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/gradientView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toTopOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="31.89dp"
        android:layout_height="31.89dp"
        android:layout_marginStart="24dp"
        android:onClick="back"
        android:layout_marginTop="24dp"
        android:background="@drawable/left_custom"
        android:src="@drawable/baseline_keyboard_arrow_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <LinearLayout
        android:onClick="back"
        android:layout_width="411dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>


    <!-- Nội dung ở phần dưới của màn hình -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineCenter">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/leaf"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="196dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:text="Create New Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_login"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="13dp"
        android:paddingLeft="10dp"
        android:hint="Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
     />

    <EditText
        android:id="@+id/edtEmailR"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="13dp"
        android:hint="Email"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white"
        />

    <EditText
        android:id="@+id/edtPassR"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:layout_gravity="center"
        android:drawablePadding="13dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="register"
        android:id="@+id/appCompatButton2"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:hint="Sign up"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton3"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:drawablePadding="-60dp"
        android:hint="Sign up with google"
        android:textAlignment="center"
        android:background="@drawable/button_login"
        android:textColorHint="@color/white"
        android:drawableStart="@drawable/gg"
        android:layout_marginTop="20dp"
        android:paddingLeft="80dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatButton2" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="143dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:text="Already have an account?"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="36dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:text="Login"
                android:onClick="login"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textStyle="bold"
           />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
