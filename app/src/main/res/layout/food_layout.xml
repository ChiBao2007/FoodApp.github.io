<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hình ảnh thực phẩm ở giữa -->
            <ImageView
                android:id="@+id/hinhfood"
                android:layout_width="149dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/pz2"
                app:cardCornerRadius="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- Tên thực phẩm -->
                <TextView
                    android:id="@+id/tenthucpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Pizza"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#686F82"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Đánh giá -->
                    <TextView
                        android:id="@+id/danhgia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#686F82"
                        android:drawableLeft="@drawable/baseline_star_border_24"/>

                    <!-- Số lượng đánh giá -->
                    <TextView
                        android:id="@+id/soluong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(163)"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="#686F82"
                        android:layout_marginLeft="8dp"/>

                    <!-- Khoảng cách giữa 4.8(163) và 20 min -->
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <!-- Thời gian -->
                    <TextView
                        android:id="@+id/thoigian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 min"
                        android:textSize="12.5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="#686F82"
                        android:drawableLeft="@drawable/baseline_access_time_24"/>
                </LinearLayout>

                <!-- Giá thực phẩm -->
                <TextView
                    android:id="@+id/giathucpham"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="100000"
                    android:textColor="#FF7269"
                    android:textSize="20dp"
                    android:textStyle="bold" />
<!--                <androidx.appcompat.widget.AppCompatButton-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Buy"-->
<!--                    android:textColor="#FF7269"-->
<!--                    android:elevation="4dp"-->
<!--                    android:background="@drawable/button_login"-->
<!--                    android:layout_gravity="center"/>-->

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
